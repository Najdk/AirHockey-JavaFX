<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx" alignment="center" hgap="10" vgap="10"
          fx:controller="com.github.airhockey.controllers.FieldController"
>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0"
            fx:id="ownNickname"></Label>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1"
           fx:id="opponentNickname">No opponent</Label>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="2"
            onAction="#getOpponentNickname">Get opponent nickname</Button>
</GridPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.github.airhockey.controllers.GameController" alignment="center" hgap="10" vgap="10"
          styleClass="root">
    <Label text="Air Hockey"
           GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"
           GridPane.halignment="CENTER"
           styleClass="header">
        <effect>
            <DropShadow color="#3aff30" blurType="GAUSSIAN" radius="25" spread="0.6">
            </DropShadow>
        </effect>
    </Label>
    <Label text="Nickname:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           styleClass="l1">
        <effect>
            <DropShadow color="ff0c0c" blurType="GAUSSIAN" radius="5" spread="0.6">
            </DropShadow>
        </effect>
    </Label>
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            fx:id="nicknameField"/>
    <Button text="Start game"
            GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2"
            GridPane.halignment="CENTER"
            fx:id="startButton"
            onAction="#handleStartButtonAction"></Button>

    <!--CSS-->
    <stylesheets>
        <URL value="@/assets/css/main.css"></URL>
    </stylesheets>
</GridPane>